{
  "tests": [
    {
      "name": "Register new user",
      "method": "POST",
      "path": "/?action=register",
      "body": {
        "email": "test@example.com",
        "username": "testuser",
        "password": "test123456"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login user",
      "method": "POST",
      "path": "/?action=login",
      "body": {
        "email": "test@example.com",
        "password": "test123456"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Register missing fields",
      "method": "POST",
      "path": "/?action=register",
      "body": {
        "email": ""
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login wrong password",
      "method": "POST",
      "path": "/?action=login",
      "body": {
        "email": "test@example.com",
        "password": "wrongpass"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
